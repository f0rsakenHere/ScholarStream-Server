{
  "info": {
    "name": "ScholarStream API",
    "description": "Complete API collection for ScholarStream backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
